<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AutoInsurActivity"    >

    <ImageView
        android:id="@+id/ivMainLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/taylorinsurancepuregreen" />

    <TextView
        android:id="@+id/txtAutoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/txtAutoInfo"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAutoMake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtAutoMake"
        android:textSize="16sp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtAutoModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtAutoModel"
        android:textSize="16sp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtAutoDateMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtAutoDateMade"
        android:textSize="16sp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtAutoPolicySD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtAutoPolicySD"
        android:textSize="16sp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtAutoPolicyED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtAutoPolicyED"
        android:textSize="16sp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txtAutoPolicyPrem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/txtAutoPolicyPrem"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBackAutoInsur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</LinearLayout>