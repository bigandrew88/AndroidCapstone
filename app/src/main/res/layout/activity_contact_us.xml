<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".AutoInsurActivity"
    android:background="@drawable/appbackgroundfog">

    <ImageView
        android:id="@+id/ivContactLogo"
        android:layout_width="332dp"
        android:layout_height="282dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/taylorinsurancepureblack" />

    <TextView
        android:id="@+id/txtContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivContactLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/txtContactUs"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContactUs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/txtContactInfo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContactInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContactInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/txtContactInfoEmail"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBackContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingHorizontal="80dp"
        android:paddingVertical="20dp"
        android:text="@string/btnBackContactUs"
        app:icon="@android:drawable/ic_dialog_dialer" />
</RelativeLayout>